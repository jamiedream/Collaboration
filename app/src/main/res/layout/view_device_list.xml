<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/device_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:textColor="@color/scorpion"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/device_img"
        />
    <ImageView
        android:id="@+id/device_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_x3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".24"
        app:layout_constraintStart_toEndOf="@id/device_type"
        app:layout_constraintEnd_toStartOf="@id/img_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/img_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintTop_toTopOf="@id/device_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/device_img"
        />
    <View
        android:id="@+id/device_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/device_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/device_img"
        app:layout_constraintBottom_toBottomOf="@id/device_img"
        />

</androidx.constraintlayout.widget.ConstraintLayout>