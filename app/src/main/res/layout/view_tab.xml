<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tab_first"
        android:layout_width="0dp"
        android:layout_height="@dimen/toggle_height"
        android:background="@drawable/bg_tab_start"
        android:textOn="@null"
        android:textOff="@null"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_toggle"
        android:textAllCaps="false"
        android:gravity="center"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tab_second"
        android:layout_width="0dp"
        android:layout_height="@dimen/toggle_height"
        android:background="@drawable/bg_tab_center"
        android:textOn="@null"
        android:textOff="@null"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_toggle"
        android:textAllCaps="false"
        android:gravity="center"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".34"
        app:layout_constraintStart_toEndOf="@id/tab_first"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tab_third"
        android:layout_width="0dp"
        android:layout_height="@dimen/toggle_height"
        android:background="@drawable/bg_tab_end"
        android:textOn="@null"
        android:textOff="@null"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_toggle"
        android:textAllCaps="false"
        android:gravity="center"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".33"
        app:layout_constraintStart_toEndOf="@id/tab_second"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>