<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        android:alpha=".6"
        android:scaleX="20"
        android:scaleY="20"
        app:layout_constraintHorizontal_bias=".05"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.viwave.collaborationproject.fragments.widgets.ManualInputLayout
        android:id="@+id/manual_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:manualInputTitle="@string/weight"
        app:manualInputUnit="@string/unit_weight"
        app:manualInputEditIme="imeDone"
        app:manualInputEditType="typeNumberDecimal"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintStart_toEndOf="@id/icon_measurement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_measurement"
        app:layout_constraintBottom_toBottomOf="@id/icon_measurement"
        />

</androidx.constraintlayout.widget.ConstraintLayout>