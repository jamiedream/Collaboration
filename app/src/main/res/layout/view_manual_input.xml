<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_10"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_20">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wild_sand"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/title_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@color/storm_dust"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider"
            />
        <ImageView
            android:id="@+id/img_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_count_temp"
            android:layout_marginEnd="@dimen/dp_4"
            app:layout_constraintEnd_toStartOf="@id/title_measurement"
            app:layout_constraintTop_toTopOf="@id/title_measurement"
            app:layout_constraintBottom_toBottomOf="@id/title_measurement"
            />
        <ImageView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line_case_list"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/title_measurement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/value_measurement"
            />
        <EditText
            android:id="@+id/value_measurement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHighlight="@android:color/white"
            android:textSize="@dimen/sp_24"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:imeOptions="actionDone"
            android:textIsSelectable="false"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            />
        <TextView
            android:id="@+id/unit_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_celsius"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/storm_dust"
            app:layout_constraintStart_toStartOf="@id/value_measurement"
            app:layout_constraintEnd_toEndOf="@id/value_measurement"
            app:layout_constraintTop_toBottomOf="@id/value_measurement"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>