<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_case_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/support_case_no"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/nandor"
        android:layout_marginStart="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_case_no"
        />
    <TextView
        android:id="@+id/star_case_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@id/title_case_no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_case_no"
        />
    <EditText
        android:id="@+id/edit_case_no"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_16"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/nandor"
        android:background="@drawable/bg_edittext"
        android:layout_marginTop="@dimen/dp_18"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/star_case_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_case_no"
        />
    <ImageView
        android:id="@+id/divider_case_no"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_case_list"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_case_no"
        />

    <TextView
        android:id="@+id/title_case_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/support_case_name"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/nandor"
        android:layout_marginStart="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_case_no"
        app:layout_constraintBottom_toTopOf="@id/divider_case_name"
        />
    <TextView
        android:id="@+id/star_case_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@id/title_case_name"
        app:layout_constraintTop_toBottomOf="@id/divider_case_no"
        app:layout_constraintBottom_toTopOf="@id/divider_case_name"
        />
    <EditText
        android:id="@+id/edit_case_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/bg_edittext"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/nandor"
        android:layout_marginTop="@dimen/dp_18"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/edit_case_no"
        app:layout_constraintEnd_toEndOf="@id/edit_case_no"
        app:layout_constraintTop_toBottomOf="@id/divider_case_no"
        app:layout_constraintBottom_toTopOf="@id/divider_case_name"
        />
    <ImageView
        android:id="@+id/divider_case_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_case_list"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_case_name"
        />
    <TextView
        android:id="@+id/title_case_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/support_case_gender"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/nandor"
        android:layout_marginStart="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_case_name"
        app:layout_constraintBottom_toTopOf="@id/divider_case_gender"
        />
    <TextView
        android:id="@+id/star_case_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@id/title_case_gender"
        app:layout_constraintTop_toBottomOf="@id/divider_case_name"
        app:layout_constraintBottom_toTopOf="@id/divider_case_gender"
        />
    <RadioGroup
        android:id="@+id/radio_case_gender"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="@id/edit_case_no"
        app:layout_constraintEnd_toEndOf="@id/edit_case_no"
        app:layout_constraintTop_toBottomOf="@id/divider_case_name"
        app:layout_constraintBottom_toTopOf="@id/divider_case_gender"
        >
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_male_case_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_case_gender_male"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/nandor"
            android:layout_weight="1"
            android:checked="true"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_female_case_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_case_gender_female"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/nandor"
            android:layout_weight="1"
            android:checked="false"
            android:layout_gravity="center"
            />
    </RadioGroup>
    <ImageView
        android:id="@+id/divider_case_gender"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_case_list"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_case_gender"
        />
</androidx.constraintlayout.widget.ConstraintLayout>