<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="DrawerMenuTextStyle">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToggleOvalBtn">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_oval_toggle</item>
    </style>

    <!--Chart-->
    <style name="ChartLightText">
        <item name="android:textColor">@color/silver_light</item>
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="HealthChartRangeDateText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--Marker-->
    <style name="HealthTitle">
        <item name="android:textColor">@color/nandor</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HealthChartComponentSubTitle">
        <item name="android:textColor">@color/boulder</item>
        <item name="android:textSize">@dimen/sp_8</item>
    </style>

    <style name="HealthListValue">
        <item name="android:textColor">@color/nandor</item>
        <item name="android:textSize">@dimen/sp_26</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HealthThemeText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/nandor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
