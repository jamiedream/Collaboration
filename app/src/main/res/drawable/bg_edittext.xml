<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <stroke android:color="@color/silver_light" android:width="@dimen/dp_2"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/dp_4"/>
            <padding android:right="@dimen/dp_4" android:left="@dimen/dp_4" android:bottom="@dimen/dp_4" android:top="@dimen/dp_4" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <stroke android:color="@color/silver" android:width="@dimen/dp_2"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/dp_4"/>
            <padding android:right="@dimen/dp_4" android:left="@dimen/dp_4" android:bottom="@dimen/dp_4" android:top="@dimen/dp_4" />
        </shape>
    </item>

</selector>
